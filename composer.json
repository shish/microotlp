{
    "name": "shish/microotlp",
    "type": "library",
    "description": "A minimal OpenTelemetry logging library",
    "keywords": [
        "otlp",
        "opentelemetry"
    ],
    "homepage": "https://github.com/shish/microotlp",
    "license": "MIT",
    "authors": [
        {
            "name": "Shish",
            "email": "webmaster@shishnet.org",
            "homepage": "http://shishnet.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^2.1",
        "thecodingmachine/safe": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "MicroOTLP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MicroOTLP\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@format",
            "@analyse",
            "@test"
        ],
        "stan": [
            "@analyse"
        ],
        "format": "php-cs-fixer fix",
        "analyse-ci": "phpstan analyse --error-format=github",
        "analyse": "phpstan analyse --error-format=raw | sed -E 's/:([0-9]+):/:\\1 /'",
        "test": "XDEBUG_MODE=coverage phpunit"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "tbachert/spi": false
        }
    }
}
